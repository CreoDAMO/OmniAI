[[workflows.workflow]]
name = "Build Frontend"
author = 44613894
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "curl -fsSL https://deb.nodesource.com/setup_20.x | sudo -E bash -"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "sudo apt-get install -y nodejs"

[[workflows.workflow.tasks]]
